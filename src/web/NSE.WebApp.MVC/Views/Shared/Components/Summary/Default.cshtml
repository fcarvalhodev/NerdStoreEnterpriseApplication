@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<AuthenticationResources> SharedLocalizer


@if (ViewData.ModelState.ErrorCount > 0)
{ 
    <div style="padding-top: 15px;">
    </div>
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3 id="msgRetorno" style="padding-top:20px">@SharedLocalizer["ErrorMessage"]</h3>
        <div style="padding-top:20px" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
}